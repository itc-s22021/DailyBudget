<!-- res/layout/activity_expense_check.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"> <!-- 中央寄せ -->

    <TextView
        android:id="@+id/todayDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日の日付"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" /> <!-- ボトムマージンで間隔調整 -->

    <TextView
        android:id="@+id/todaySpendingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日の支出"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/todayBudgetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日の予算"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" /> <!-- マージンで間隔調整 -->

    <Button
        android:id="@+id/voiceInputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音声入力"
        android:layout_marginBottom="8dp" /> <!-- ボトムマージン調整 -->

    <Button
        android:id="@+id/manualInputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手動入力" />

</LinearLayout>
